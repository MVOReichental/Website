<div class="table-responsive birthdays" id="members-list">
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsort="disabled" class="d-print-none minimum-width"><input type="checkbox" class="members-select-checkbox"/></th>
                <th data-defaultsort="disabled" class="d-print-none minimum-width"></th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th data-defaultsort="asc">Geburtstag</th>
                <th>Geburtsjahr</th>
                <th>Alter</th>
                <th data-defaultsort="disabled"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr data-id="{{ user.id }}">
                    <td class="d-print-none minimum-width"><input type="checkbox" class="members-select-checkbox"/></td>
                    <td class="d-print-none minimum-width"><img src="{{ user.profilePictureUrl }}" height="40" loading="lazy"/></td>
                    <td class="first-name">
                        <a href="internal/members/{{ user.username }}" class="d-print-none"><i class="fas fa-info-circle"></i></a>
                        {{ user.firstName }}
                    </td>
                    <td class="last-name">{{ user.lastName }}</td>
                    <td class="birthdate" data-value="{{ user.nextBirthday.format("Y.m.d") }}" data-next-birthday="{{ user.nextBirthday.format("Y-m-d") }}">{{ user.birthDate.format("d.m.") }}</td>
                    <td>{{ user.birthDate.format("Y") }}</td>
                    <td>{{ user.birthDate.yearsTillNow }}</td>
                    <td class="birthday-days">
                        <div class="d-none"><i class="fas fa-birthday-cake"></i> <span class="badge badge-primary"></span></div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>