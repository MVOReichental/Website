<dl class="dl-horizontal">
    <dt>Titel</dt>
    <dd>{{ title.title }}</dd>

    <dt>Komponist</dt>
    <dd>{{ title.composer }}</dd>

    <dt>Bearbeiter</dt>
    <dd>{{ title.arranger }}</dd>

    <dt>Verleger</dt>
    <dd>{{ title.publisher }}</dd>
</dl>

{% if title.details %}
    {{ title.formatDetails|raw }}
{% endif %}

<h3 class="page-header">Programme</h3>

{% if title.programs.count %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Programm</th>
                    <th>Jahr</th>
                    <th>Nummer</th>
                </tr>
            </thead>
            <tbody>
                {% for program in title.programs %}
                    <tr>
                        <td><a href="internal/notedirectory/programs/{{ program.year }}/{{ program.name }}" class="d-print-none"><i class="fas fa-info-circle"></i></a> {{ program.title }}</td>
                        <td>{{ program.year }}</td>
                        <td>{{ program.titles[0].number }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Der Titel ist in keinem Programm vorhanden!</div>
{% endif %}