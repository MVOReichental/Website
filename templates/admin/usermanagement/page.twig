{% extends "base/internal-public-switch.twig" %}

{% block title %}Benutzerverwaltung{{ parent() }}{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="{{ asset("js/usermanagement.js") }}"></script>
{% endblock %}

{% block content %}
    <h1 class="page-header">Benutzerverwaltung</h1>

    <a href="internal/admin/usermanagement/user" class="btn btn-success mb-3"><i class="fas fa-user-plus"></i> Neuer Benutzer</a>

    {{ include("admin/usermanagement/user-list.twig", {users: users.enabledUsers}) }}

    {% if users.disabledUsers.count %}
        <h3 class="page-header">Deaktivierte Benutzer</h3>

        {{ include("admin/usermanagement/user-list.twig", {users: users.disabledUsers}) }}
    {% endif %}

    <div class="modal" id="usermanagement-switch-user-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Benutzer wechseln</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bist du dir sicher, dass du den Benutzer wechseln m&ouml;chtest?</p>
                </div>
                <div class="modal-footer">
                    <a id="usermanagement-switch-user-confirm" class="btn btn-primary">Benutzer wechseln</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}