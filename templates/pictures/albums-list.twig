{% if albums.count %}
    <div class="row">
        {% for album in albums %}
            <div class="col-sm-6 col-md-4 mt-3">
                <a href="{{ loop.parent.picturesBaseUrl }}/{{ album.year }}/{{ album.name }}" class="thumbnail">
                    <div class="card">
                        <img class="card-img-top" src="pictures/{{ album.year }}/{{ album.name }}/{{ album.cover.hash }}_small.jpg" loading="lazy"/>
                        <div class="card-body">
                            <h5 class="card-title">{{ album.title }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ album.date.humanReadableDate }}</h6>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Keine Alben verf&uuml;gbar!</div>
{% endif %}