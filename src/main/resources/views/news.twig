{% extends "base/internal-public-switch.twig" %}

{% block title %}Aktuell{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset("css/news.css") }}"/>
{% endblock %}

{% block content %}
    <h1 class="page-header">Aktuell</h1>

    <div id="news-content">
        {% if news %}
            {{ news|raw }}
        {% endif %}
    </div>

    {% if dates.count %}
        <h2 class="page-header">Unsere n&auml;chsten Termine</h2>

        {% include("dates/list.twig") %}

        <p class="text-muted d-print-none">Klicken Sie <a href="termine">hier</a> um weitere Termine zu sehen.</p>
    {% endif %}

    {% if albums.count %}
        <h2 class="page-header">Neueste Bilder</h2>

        {% include("pictures/albums-list.twig") %}

        <p class="text-muted d-print-none">Klicken Sie <a href="{{ picturesBaseUrl }}">hier</a> um weitere Alben zu sehen.</p>
    {% endif %}
{% endblock %}