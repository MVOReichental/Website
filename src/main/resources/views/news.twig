{% extends "base/internal-public-switch.twig" %}

{% block title %}Aktuell{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="css/news.css"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    {% if news.allowEdit %}
        <script src="node_modules/ckeditor/ckeditor.js"></script>
        <script src="node_modules/ckeditor/adapters/jquery.js"></script>
        <script src="js/newseditor.js"></script>
    {% endif %}
{% endblock %}

{% block content %}
    <h1 class="page-header">Aktuell</h1>

    <div id="news-content" {% if news.allowEdit %}contenteditable{% endif %}>
        {% if news.content %}
            {{ news.content|raw }}
        {% endif %}
    </div>

    {% if dates.count %}
        <h2 class="page-header">Unsere n&auml;chsten Termine</h2>

        {% include("dates/list.twig") %}

        <p class="text-muted hidden-print">Klicken Sie <a href="termine">hier</a> um weitere Termine zu sehen.</p>
    {% endif %}

    {% if albums.count %}
        <h2 class="page-header">Neueste Bilder</h2>

        {% include("pictures/albums-list.twig") %}

        <p class="text-muted hidden-print">Klicken Sie <a href="{{ picturesBaseUrl }}">hier</a> um weitere Alben zu sehen.</p>
    {% endif %}
{% endblock %}