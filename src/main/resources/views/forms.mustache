<div class="page-header">
	<h1>Formulare</h1>
</div>

{{#forms.count}}
	<div class="table-responsive">
		<table class="table table-striped sortable">
			<thead>
				<tr>
					<th>Name</th>
					<th>Typ</th>
					<th>&Auml;nderungsdatum</th>
				</tr>
			</thead>
			<tbody>
				{{#forms}}
					<tr>
						<td>
							<a href="intern/forms/{{filename}}" class="btn btn-success btn-xs"><i class="fa fa-download"></i> Herunterladen</a>
							{{title}}
						</td>
						<td>{{type}}</td>
						<td data-value="{{date}}">{{date.humanReadableDate}}</td>
					</tr>
				{{/forms}}
			</tbody>
		</table>
	</div>
{{/forms.count}}
{{^forms.count}}
	<div class="alert alert-warning"><i class="fa fa-exclamation-triangle"></i> Keine Formulare verf&uuml;gbar.</div>
{{/forms.count}}