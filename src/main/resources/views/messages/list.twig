{% if messages.count %}
    <ul class="media-list">
        {% for message in messages %}
            <li class="media well messages-list" data-id="{{ message.id }}">
                <div class="messages-hide-button" data-toggle="tooltip" title="Nachricht ausblenden"><i class="fa fa-trash"></i></div>
                <div class="media-left gallery-source">
                    <a href="users/{{ message.sender.id }}/profile-picture.jpg?hash={{ message.sender.profilePictureHash }}">
                        <img class="media-object img-rounded" src="users/{{ message.sender.id }}/profile-picture.jpg?hash={{ message.sender.profilePictureHash }}" width="100"/>
                    </a>
                </div>
                <div class="media-body">
                    <div class="clearfix">
                        <strong>Von:</strong> <a href="internal/members/{{ message.sender.username }}" class="badge badge-default">{{ message.sender.firstName }} {{ message.sender.lastName }}</a>

                        <div class="messages-date">
                            <i class="fa fa-clock-o"></i> {{ message.date.humanReadableDate }} um {{ message.date.humanReadableTime }}
                        </div>
                    </div>
                    <div class="clearfix">
                        <strong>An:</strong>
                        {% for recipient in message.recipients %}
                            <a href="internal/members/{{ recipient.username }}" class="badge badge-default">{{ recipient.firstName }} {{ recipient.lastName }}</a>
                        {% endfor %}
                    </div>
                    {% if message.attachments.count %}
                        <div class="clearfix">
                            <strong>Anh&auml;nge:</strong>
                            {% for upload in message.attachments %}
                                <a href="{{ upload.url }}" class="badge badge-default">{{ upload.filename }}</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ message.formatText|raw }}
                </div>
            </li>
        {% endfor %}
    </ul>

    <div class="modal fade" id="messages-hide-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nachricht ausblenden</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    Bist du dir sicher, dass du die Nachricht ausblenden m&ouml;chtest?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="messages-hide-confirm-button">Nachricht ausblenden</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-warning"><i class="fa fa-exclamation-triangle"></i> Keine Nachrichten verf&uuml;gbar.</div>
{% endif %}