{% if messages.count %}
    {% for message in messages %}
        <div class="card mt-3 messages-list" data-id="{{ message.id }}">
            <div class="card-header">
                <ul class="list-unstyled">
                    <li class="media gallery-source">
                        <a href="users/{{ message.sender.id }}/profile-picture.jpg?hash={{ message.sender.profilePictureHash }}">
                            <img class="img-rounded" src="users/{{ message.sender.id }}/profile-picture.jpg?hash={{ message.sender.profilePictureHash }}" width="100"/>
                        </a>
                        <div class="media-body ml-3">
                            <div>
                                <strong>Von:</strong>
                                <a href="internal/members/{{ message.sender.username }}" class="badge badge-primary">{{ message.sender.firstName }} {{ message.sender.lastName }}</a>
                            </div>

                            <div>
                                <strong>An:</strong>
                                {% for recipient in message.recipients %}
                                    <a href="internal/members/{{ recipient.username }}" class="badge badge-primary">{{ recipient.firstName }} {{ recipient.lastName }}</a>
                                {% endfor %}
                            </div>

                            <div>
                                <strong>Zeit:</strong> {{ message.date.humanReadableDate }} um {{ message.date.humanReadableTime }}
                            </div>
                        </div>
                    </li>
                </ul>

                <div class="messages-hide-button" data-toggle="tooltip" title="Nachricht ausblenden"><i class="fa fa-trash"></i></div>
            </div>

            <div class="card-body">
                {{ message.formatText|raw }}
            </div>

            {% if message.attachments.count %}
                <div class="card-footer">
                    <ul class="list-unstyled">
                        {% for upload in message.attachments %}
                            <li><a href="{{ upload.url }}" class="badge badge-default">{{ upload.filename }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    {% endfor %}

    <div class="modal fade" id="messages-hide-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nachricht ausblenden</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    Bist du dir sicher, dass du die Nachricht ausblenden m&ouml;chtest?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="messages-hide-confirm-button">Nachricht ausblenden</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-warning"><i class="fa fa-exclamation-triangle"></i> Keine Nachrichten verf&uuml;gbar.</div>
{% endif %}