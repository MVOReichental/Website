<ul class="media-list">
	{{#messages}}
		<li class="media well">
			<div class="media-left">
				<img class="media-object img-rounded" src="users/{{sender.id}}/profile-picture.jpg?hash={{sender.profilePictureHash}}" width="100"/>
			</div>
			<div class="media-body">
				<div class="clearfix">
					<strong>Von:</strong>
					{{#sender}}
						<a href="intern/members/{{username}}" class="label label-default">{{firstName}} {{lastName}}</a>
					{{/sender}}
					<div class="messages-date">
						<i class="fa fa-clock-o"></i> {{#date}}{{humanReadableDate}} um {{humanReadableTime}}{{/date}}
					</div>
				</div>
				<div class="clearfix">
					<strong>An:</strong>
					{{#recipients}}
						<a href="intern/members/{{username}}" class="label label-default">{{firstName}} {{lastName}}</a>
					{{/recipients}}
				</div>
				{{text}}
			</div>
		</li>
	{{/messages}}
</ul>