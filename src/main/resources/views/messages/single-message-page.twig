{% extends "base/internal-public-switch.twig" %}

{% block title %}Nachricht{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="css/messages.css"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="js/messages.js"></script>
{% endblock %}

{% block content %}
    <h1 class="page-header">Nachricht</h1>

    {% if showSentInfo %}
        <div class="alert alert-success"><i class="fas fa-check"></i> Die Nachricht wurde erfolgreich gesendet.</div>
    {% endif %}

    {% include("messages/single-message.twig") %}

    <div class="modal fade" id="messages-hide-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nachricht ausblenden</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Bist du dir sicher, dass du die Nachricht ausblenden m&ouml;chtest?</p>

                    <p class="text-muted">Die Nachricht wird nur f&uuml;r dich ausgeblendet und kann nicht wiederhergestellt werden.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="messages-hide-confirm-button">Nachricht ausblenden</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}