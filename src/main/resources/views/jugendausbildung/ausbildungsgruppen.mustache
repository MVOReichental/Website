<div class="page-header">
	<h1>Ausbildungsgruppen</h1>
</div>

<strong>Stand: {{date}}</strong><br/>

<div class="row">
	{{#columns}}
		<div class="col-md-6">
			<h2>{{title}}</h2>

			{{#types}}
				{{#name}}<h3>{{.}}</h3>{{/name}}

				<dl class="dl-horizontal">
					{{#groups}}
						<dt>{{trainer}}</dt>
						<dd>
							{{#students}}
								<div>{{.}}</div>
							{{/students}}
						</dd>
					{{/groups}}
				</dl>
			{{/types}}
		</div>
	{{/columns}}
</div>