<div class="row">
	<div class="col-md-4">
		{{#user}}
			<div id="members-details-user" class="gallery-source" data-id="{{id}}">
				<a href="users/{{id}}/profile-picture.jpg?hash={{profilePictureHash}}">
					<img src="users/{{id}}/profile-picture.jpg?hash={{profilePictureHash}}" class="img-rounded" width="200"/>
				</a>
				<h3><span id="members-details-firstname">{{firstName}}</span> <span id="members-details-lastname">{{lastName}}</span></h3>

				<table class="table table-striped">
					<tbody>
						{{#email}}
							<tr>
								<td>Email-Adresse</td>
								<td><i class="fa fa-envelope"></i> <a href="mailto:{{.}}">{{.}}</a></td>
							</tr>
						{{/email}}
						{{#contacts}}
							<tr>
								<td>{{type}} ({{category}})</td>
								<td><i class="fa fa-phone"></i> {{value}}</td>
							</tr>
						{{/contacts}}
						{{#birthDate}}
							<tr>
								<td>Geburtsdatum</td>
								<td><i class="fa fa-calendar"></i> {{humanReadableDate}} ({{yearsTillNow}})</td>
							</tr>
						{{/birthDate}}
					</tbody>
				</table>

				<button type="button" class="btn btn-sm btn-success" id="members-details-send-message-button"><i class="fa fa-send"></i> Nachricht senden</button>
			</div>
		{{/user}}
	</div>

	<div class="col-md-8" id="members-details-messages">
		<h3>Nachrichten von {{user.firstName}}</h3>

		<p class="text-muted"><strong>Hinweis:</strong> Du siehst nur deine bzw. an dich gesendete Nachrichten.</p>

		{{> messages/list}}
	</div>
</div>

{{> messages/send-modal}}