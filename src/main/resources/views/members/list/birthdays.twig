<div class="table-responsive birthdays" id="members-list">
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsort="disabled" class="hidden-print minimum-width"><input type="checkbox" class="members-select-checkbox"/></th>
                <th data-defaultsort="disabled" class="hidden-print minimum-width"></th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Geburtstag</th>
                <th>Geburtsjahr</th>
                <th>Alter</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr data-id="{{ user.id }}" data-own-user="{{ user.isCurrentUser }}">
                    <td class="hidden-print minimum-width"><input type="checkbox" class="members-select-checkbox"/></td>
                    <td class="hidden-print minimum-width"><img src="users/{{ user.id }}/profile-picture.jpg?hash={{ user.profilePictureHash }}" height="40"/></td>
                    <td class="first-name">
                        <a href="internal/members/{{ user.username }}" class="hidden-print"><i class="fa fa-info-circle"></i></a>
                        {{ user.firstName }}
                    </td>
                    <td class="last-name">{{ user.lastName }}</td>
                    <td class="birthdate" data-value="{{ user.birthDate.format("m.d") }}" data-next-birthday="{{ user.nextBirthday.format("Y-m-d") }}">{{ user.birthDate.format("d.m.") }}</td>
                    <td>{{ user.birthDate.format("Y") }}</td>
                    <td>{{ user.birthDate.yearsTillNow }}</td>
                    <td class="birthday-days">
                        <div class="hidden"><i class="fa fa-birthday-cake"></i> <span class="label label-primary"></span></div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>