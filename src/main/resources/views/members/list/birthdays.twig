<div class="table-responsive" id="members-list">
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsort="disabled" class="hidden-print"><input type="checkbox" class="members-select-checkbox"/></th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Geburtstag</th>
                <th>Alter</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr data-id="{{ user.id }}" data-own-user="{{ user.isCurrentUser }}">
                    <td class="hidden-print"><input type="checkbox" class="members-select-checkbox"/></td>
                    <td class="first-name">
                        <a href="internal/members/{{ user.username }}" class="hidden-print"><i class="fa fa-info-circle"></i></a>
                        {{ user.firstName }}
                    </td>
                    <td class="last-name">{{ user.lastName }}</td>
                    <td data-value="{{ user.birthDate.format("md") }}">{{ user.birthDate.format("d.m.") }}</td>
                    <td>{{ user.birthDate.yearsTillNow }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>