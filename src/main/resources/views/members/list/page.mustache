<div class="page-header">
	<h1>{{title}}</h1>
</div>

<div class="btn-group hidden-print" id="members-groups">
	{{#groups}}
		{{#active}}
			<a href="{{url}}" class="btn btn-default active">{{title}}</a>
		{{/active}}
		{{^active}}
			<a href="{{url}}" class="btn btn-default">{{title}}</a>
		{{/active}}
	{{/groups}}
</div>

{{{content}}}

<div class="btn-group hidden-print">
	<button type="button" class="btn btn-success" id="members-send-message-button"><i class="fa fa-send"></i> Nachricht senden</button>
</div>

<div class="modal fade" id="members-send-message-modal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Nachricht senden</h4>
			</div>
			<form method="post" action="intern/messages/send" id="members-send-message-form" enctype="multipart/form-data">
				<div class="modal-body">
					<div id="members-send-message-recipients"></div>
					<input type="hidden" name="recipients" id="members-send-message-recipients-list"/>

					<textarea class="form-control" rows="10" name="text" placeholder="Deine Nachricht"></textarea>

					<div id="members-send-message-attachments">
						<input type="file" name="files[]" multiple/>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-success"><i class="fa fa-send"></i> Senden</button>
				</div>
			</form>
		</div>
	</div>
</div>