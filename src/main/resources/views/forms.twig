{% extends "base/internal-public-switch.twig" %}

{% block title %}Formulare{{ parent() }}{% endblock %}

{% block content %}
    <h1 class="page-header">Formulare</h1>

    {% if forms.count %}
        <div class="table-responsive">
            <table class="table table-striped table-hover sortable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Typ</th>
                        <th>&Auml;nderungsdatum</th>
                    </tr>
                </thead>
                <tbody>
                    {% for form in forms %}
                        <tr>
                            <td>
                                <a href="internal/forms/{{ form.filename }}" class="btn btn-success btn-xs"><i class="fas fa-download"></i> Herunterladen</a>
                                {{ form.title }}
                            </td>
                            <td>{{ form.type }}</td>
                            <td data-value="{{ form.date.format("Ymd") }}">{{ form.date.humanReadableDate }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Keine Formulare verf&uuml;gbar.</div>
    {% endif %}
{% endblock %}