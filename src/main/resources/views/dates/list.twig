<div class="table-responsive">
	<table class="table table-striped table-hover" id="dates-table">
		<thead>
			<tr>
				<th>Datum</th>
				<th>Zeit</th>
				<th>Veranstaltung</th>
				<th>Ort</th>
				{% if allowEdit %}
					<th class="hidden-print"></th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for entry in dates %}
				<tr data-id="{{ entry.id }}" class="{% if entry.highlight %}highlight{% endif %}">
					<td class="dates-date">{{ entry.startDate.weekday }}, {{ entry.startDate.humanReadableDate }}</td>
					<td>
						{{ entry.startDate.humanReadableTime }}
						{% if entry.endDate %}
							- {{ entry.endDate.humanReadableTime }}
						{% endif %}
					</td>
					<td class="dates-title">{{ entry.title }}</td>
					<td>{{ entry.location.name }}</td>
					{% if allowEdit %}
						<td class="hidden-print">
							<div class="btn-group btn-group-xs">
								<a href="intern/dates/edit/{{ entry.id }}" class="btn btn-default edit" data-toggle="tooltip" title="Bearbeiten"><i class="fa fa-edit"></i></a>
								<button type="button" class="btn btn-danger remove" data-toggle="tooltip" title="L&ouml;schen"><i class="fa fa-remove"></i></button>
							</div>

							{% if entry.isPublic %}
								<span class="label label-success">&Ouml;ffentlich</span>
							{% else %}
								{% if entry.groups.count == 1 %}
									<span class="label label-danger">1 Gruppe</span>
								{% elseif entry.groups.count > 1 %}
									<span class="label label-danger">{{ entry.groups.count }} Gruppen</span>
								{% else %}
									<span class="label label-danger">Intern</span>
								{% endif %}
							{% endif %}
						</td>
					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% if allowEdit %}
	<div class="modal fade" id="dates-remove-modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Termin entfernen</h4>
				</div>
				<div class="modal-body">
					Bist du dir sicher, dass du den ausgew&auml;hlen Termin <strong id="dates-remove-title"></strong> entfernen m&ouml;chtest?

					<div class="alert alert-danger" id="dates-remove-error">
						<i class="fa fa-exclamation-triangle"></i>
						<span></span>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger" id="dates-remove-confirm">Termin entfernen</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
				</div>
			</div>
		</div>
	</div>
{% endif %}