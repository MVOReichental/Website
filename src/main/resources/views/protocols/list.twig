{% if protocols.count %}
    <div class="table-responsive">
        <table class="table table-striped table-hover sortable">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Datum</th>
                    <th data-defaultsort="disabled">Gruppen</th>
                </tr>
            </thead>
            <tbody>
                {% for protocol in protocols %}
                    <tr data-id="{{ protocol.id }}">
                        <td>
                            <a href="internal/uploads/{{ protocol.upload.id }}/{{ protocol.upload.key }}/{{ protocol.upload.filename }}" class="btn btn-success btn-xs hidden-print"><i class="fa fa-download"></i> Herunterladen</a>
                            {{ protocol.title }}
                        </td>
                        <td data-value="{{ protocol.date.format("Ymd") }}">{{ protocol.date.humanReadableDate }}</td>
                        <td>
                            {% for group in protocol.groups %}
                                <span class="label label-default">{{ loop.parent.loop.parent.groups[group]|raw }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-warning"><i class="fa fa-exclamation-triangle"></i> Keine Protokolle verf&uuml;gbar.</div>
{% endif %}