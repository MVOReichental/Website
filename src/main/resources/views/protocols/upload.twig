{% extends "base/internal-public-switch.twig" %}

{% block title %}Protokoll hochladen{{ parent() }}{% endblock %}

{% block content %}
    <h1 class="page-header">Protokoll hochladen</h1>

    <form action="internal/protocols" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="protocols-upload-date">Datum</label>
            <input type="date" class="form-control" id="protocols-upload-date" name="date" required/>
        </div>

        <div class="form-group">
            <label for="protocols-upload-file">Datei</label>
            <input type="file" class="form-control" id="protocols-upload-file" name="file" required/>
        </div>

        <div class="form-group">
            <label for="protocols-upload-title">Titel</label>
            <input type="text" class="form-control" id="protocols-upload-title" name="title" required/>
        </div>

        <div class="form-group">
            <label for="protocols-upload-groups">Gruppen</label>

            <select class="selectpicker form-control" id="protocols-upload-groups" name="groups[]" data-actions-box="true" multiple required>
                {% for name, title in groups %}
                    <option value="{{ name }}">{{ title|raw }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i> Hochladen</button>
            <a href="internal/protocols" class="btn btn-secondary">Abbrechen</a>
        </div>
    </form>
{% endblock %}