{% extends "base/internal-public-switch.twig" %}

{% block title %}Benutzerverwaltung{{ parent() }}{% endblock %}

{% block content %}
    <h1 class="page-header">Benutzerverwaltung</h1>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Email-Adresse</th>
                <th>Zuletzt Online</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users if user.enabled %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastOnline }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h3 class="page-header">Deaktivierte Benutzer</h3>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Email-Adresse</th>
                <th>Zuletzt Online</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users if not user.enabled %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastOnline }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}