<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Email-Adresse</th>
            <th>Zuletzt Online</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {% for user in users if user.enabled == enabled %}
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {{ user.lastOnline.format("d.m.Y H:i") }}
                    {% if user.isOnline %}
                        <span class="label label-success">online</span>
                    {% endif %}
                </td>
                <td><a href="internal/admin/usermanagement/user/{{ user.id }}" class="btn btn-default btn-xs edit" data-toggle="tooltip" title="Bearbeiten"><i class="fa fa-edit"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>