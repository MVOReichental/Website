<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Email-Adresse</th>
            <th>Zuletzt Online</th>
            <th class="minimum-width"></th>
        </tr>
    </thead>

    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {{ user.lastOnline.format("d.m.Y H:i") }}
                    {% if user.isOnline %}
                        <span class="label label-success">online</span>
                    {% endif %}
                </td>
                <td class="minimum-width">
                    <div class="btn-group btn-group-xs">
                        <a href="internal/admin/usermanagement/user/{{ user.id }}" class="btn btn-default" data-toggle="tooltip" title="Bearbeiten"><i class="fa fa-edit"></i></a>
                        <a href="internal/admin/usermanagement/user/{{ user.id }}/profile-picture" class="btn btn-default" data-toggle="tooltip" title="Profilbild bearbeiten"><i class="fa fa-camera"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>