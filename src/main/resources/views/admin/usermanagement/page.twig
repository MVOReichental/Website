{% extends "base/internal-public-switch.twig" %}

{% block title %}Benutzerverwaltung{{ parent() }}{% endblock %}

{% block content %}
    <h1 class="page-header">Benutzerverwaltung</h1>

    <a href="internal/admin/usermanagement/user" class="btn btn-success"><i class="fas fa-user-plus"></i> Neuer Benutzer</a>

    {{ include("admin/usermanagement/user-list.twig", {users: users.enabledUsers}) }}

    {% if users.disabledUsers.count %}
        <h3 class="page-header">Deaktivierte Benutzer</h3>

        {{ include("admin/usermanagement/user-list.twig", {users: users.disabledUsers}) }}
    {% endif %}
{% endblock %}