{% extends "base/base.twig" %}

{% block title %} - Interner Bereich{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/bootstrap-customized.css"/>

    {{ parent() }}

    <link rel="stylesheet" href="bower_components/blueimp-file-upload/css/jquery.fileupload.css"/>
    <link rel="stylesheet" href="bower_components/bootstrap-select/dist/css/bootstrap-select.min.css"/>
    <link rel="stylesheet" href="bower_components/Jcrop/css/Jcrop.min.css"/>

    <link rel="stylesheet" href="css/main-internal.css"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="bower_components/jquery-ui/ui/widget.js"></script>
    <script src="bower_components/blueimp-file-upload/js/jquery.fileupload.js"></script>
    <script src="bower_components/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="bower_components/Jcrop/js/Jcrop.min.js"></script>
    <script src="bower_components/jquery-qrcode/jquery.qrcode.min.js"></script>
    <script src="bower_components/mustache.js/mustache.min.js"></script>

    <script src="js/internal.js"></script>
{% endblock %}

{% block header %}
    {% if currentUser %}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="internal">Interner Bereich</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button"><i class="fa fa-users"></i> Mitglieder <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="internal/members/addresslist"><i class="fa fa-address-book"></i> Adressenliste</a></li>
                                <li><a href="internal/members/birthdays"><i class="fa fa-birthday-cake"></i> Geburtstage</a></li>
                            </ul>
                        </li>
                        {% if currentUser.hasPermission("forms.*") %}
                            <li><a href="internal/forms"><i class="fa fa-file-text"></i> Formulare</a></li>
                        {% endif %}
                        {% if currentUser.hasPermission("notedirectory.*") %}
                            <li><a href="internal/notedirectory"><i class="fa fa-book"></i> Notenverzeichnis</a></li>
                        {% endif %}
                        {% if currentUser.hasPermission("protocols.*") %}
                            <li><a href="internal/protocols"><i class="fa fa-list"></i> Protokolle</a></li>
                        {% endif %}
                        {% if currentUser.hasPermission("roomoccupancyplan.*") %}
                            <li><a href="internal/roomoccupancyplan"><i class="fa fa-table"></i> Proberaumbelegung</a></li>
                        {% endif %}
                        <li><a href="internal/dates"><i class="fa fa-calendar"></i> Termine</a></li>
                        <li><a href="internal/pictures"><i class="fa fa-camera"></i> Fotogalerie</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" id="navbar-profile">
                                <img src="users/{{ currentUser.id }}/profile-picture.jpg?hash={{ currentUser.profilePictureHash }}"/>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Angemeldet als <strong>{{ currentUser.firstName }} {{ currentUser.lastName }}</strong></li>

                                <li><a href="internal/members/{{ currentUser.username }}"><i class="fa fa-user"></i> Dein Profil</a></li>

                                <li class="divider"></li>

                                <li><a href="internal/messages/sent"><i class="fa fa-send"></i> Gesendete Nachrichten</a></li>
                                <li><a href="internal/messages/received"><i class="fa fa-inbox"></i> Empfangene Nachrichten</a></li>

                                <li class="divider"></li>

                                <li><a href="internal/settings"><i class="fa fa-cogs"></i> Einstellungen</a></li>
                                <li><a href="internal/logout"><i class="fa fa-sign-out"></i> Abmelden</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}