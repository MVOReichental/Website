<div class="table-responsive">
	<table class="table table-striped table-hover" id="notedirectory-list">
		<thead>
			<tr>
				<th>Nummer</th>
				<th>Titel</th>
				<th>Komponist</th>
				<th>Bearbeiter</th>
				<th>Verleger</th>
			</tr>
		</thead>
		{{#showCategories}}
			{{#categories}}
				{{#titles.count}}
					<tbody>
						<tr>
							<th colspan="5">{{title}}</th>
						</tr>
						{{#titles}}
							<tr>
								<td>{{number}}</td>
								<td>{{title}}</td>
								<td>{{composer}}</td>
								<td>{{arranger}}</td>
								<td>{{publisher}}</td>
							</tr>
						{{/titles}}
					</tbody>
				{{/titles.count}}
			{{/categories}}
		{{/showCategories}}
		{{^showCategories}}
			<tbody>
				{{#titles}}
					<tr>
						<td>{{number}}</td>
						<td>{{title}}</td>
						<td>{{composer}}</td>
						<td>{{arranger}}</td>
						<td>{{publisher}}</td>
					</tr>
				{{/titles}}
			</tbody>
		{{/showCategories}}
	</table>
</div>