<div class="table-responsive">
	<table class="table table-striped table-hover" id="notedirectory-list">
		<thead>
			<tr>
				<th>Titel</th>
				<th>Komponist</th>
				<th>Bearbeiter</th>
				<th>Verleger</th>
			</tr>
		</thead>
		{% for category in categories %}
			{% if category.titles.count %}
				<tbody>
					<tr>
						<th colspan="4">{{ category.title }}</th>
					</tr>
					{% for title in category.titles %}
						{% include("notedirectory/list/title-row.twig") %}
					{% endfor %}
				</tbody>
			{% endif %}
		{% endfor %}
	</table>
</div>