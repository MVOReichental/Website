<div class="table-responsive">
    <table class="table table-striped table-hover" id="notedirectory-list">
        <thead>
            <tr>
                <th>Nummer</th>
                <th>Titel</th>
                <th>Komponist</th>
                <th>Bearbeiter</th>
                <th>Verleger</th>
            </tr>
        </thead>
        {% if program.name == "jahresprogramm" %}
            {% for category in program.categories %}
                {% if category.titles.count %}
                    <tbody>
                        <tr>
                            <th colspan="5">{{ category.title }}</th>
                        </tr>
                        {% for title in category.titles %}
                            {% include("notedirectory/list/title-row.twig") %}
                        {% endfor %}
                    </tbody>
                {% endif %}
            {% endfor %}
        {% else %}
            <tbody>
                {% for title in program.titles %}
                    {% include("notedirectory/list/title-row.twig") %}
                {% endfor %}
            </tbody>
        {% endif %}
    </table>
</div>