{% extends "base/internal-public-switch.twig" %}

{% block title %}{{ activePage.title }} - Notenverzeichniseditor{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="css/notedirectoryeditor.css"/>
{% endblock %}

{% block content %}
    <h1 class="page-header">Notenverzeichniseditor</h1>

    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                {% for page in pages %}
                    {% if page.active %}
                        <span class="list-group-item active">{{ page.title }}</span>
                    {% else %}
                        <a class="list-group-item" href="internal/notedirectory/editor/{{ page.name }}">{{ page.title }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="col-md-9">
            {% block editorContent %}{% endblock %}
        </div>
    </div>
{% endblock %}