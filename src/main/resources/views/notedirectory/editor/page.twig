{% extends "base/internal-public-switch.twig" %}

{% block title %}{{ pageTitle }} - Notenverzeichniseditor{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset("css/notedirectoryeditor.css") }}"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="{{ asset("js/notedirectory-editor.js") }}"></script>
{% endblock %}

{% block content %}
    <h1 class="page-header">
        Notenverzeichniseditor<br/>
        <span class="small">{{ pageTitle }}</span>
    </h1>

    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                {% for name,page in pages %}
                    {% if page.active %}
                        <span class="list-group-item active">{{ page.title }}</span>
                    {% else %}
                        <a class="list-group-item" href="internal/notedirectory/editor/{{ name }}">{{ page.title }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="col-md-9">
            {% block editorContent %}{% endblock %}
        </div>
    </div>
{% endblock %}