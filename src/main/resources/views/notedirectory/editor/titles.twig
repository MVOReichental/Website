{% extends "notedirectory/editor/page.twig" %}

{% block editorContent %}
    <div class="btn-group mb-3">
        <a href="internal/notedirectory/editor/titles/new" class="btn btn-success"><i class="fas fa-plus"></i> Neuer Titel</a>
    </div>

    {% if titles.count %}
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="notedirectory-editor-titles-table">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Komponist</th>
                        <th>Bearbeiter</th>
                        <th>Verleger</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {% for title in titles %}
                        <tr data-id="{{ title.id }}">
                            <td class="entry-title">{{ title.title }}</td>
                            <td>{{ title.composer }}</td>
                            <td>{{ title.arranger }}</td>
                            <td>{{ title.publisher }}</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="internal/notedirectory/editor/titles/{{ title.id }}" class="btn btn-secondary" data-toggle="tooltip" title="Bearbeiten"><i class="fas fa-edit"></i></a>
                                    <button type="button" class="btn btn-danger remove" data-toggle="tooltip" title="L&ouml;schen"><i class="fas fa-times"></i></button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Keine Titel verf&uuml;gbar!</div>
    {% endif %}

    <div class="modal fade" id="notedirectory-editor-title-remove-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Titel entfernen</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">Bist du dir sicher, dass du den ausgew&auml;hlen Titel <strong class="entry-title"></strong> entfernen m&ouml;chtest?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="notedirectory-editor-title-remove-confirm">Titel entfernen</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}