{% extends "notedirectory/editor/page.twig" %}

{% block editorContent %}
    <div class="btn-group mb-3">
        <a href="internal/notedirectory/editor/programs/new" class="btn btn-success"><i class="fas fa-plus"></i> Neues Programm</a>
    </div>

    {% if programs.count %}
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="notedirectory-editor-programs-table">
                <thead>
                    <tr>
                        <th>Jahr</th>
                        <th>Titel</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {% for program in programs %}
                        <tr data-id="{{ program.id }}">
                            <td class="entry-year">{{ program.year }}</td>
                            <td class="entry-title">{{ program.title }}</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="internal/notedirectory/editor/programs/{{ program.id }}" class="btn btn-secondary" data-toggle="tooltip" title="Bearbeiten"><i class="fas fa-edit"></i></a>
                                    <a href="internal/notedirectory/editor/programs/{{ program.id }}/copy" class="btn btn-secondary" data-toggle="tooltip" title="Kopieren"><i class="fas fa-copy"></i></a>
                                    <button type="button" class="btn btn-danger remove" data-toggle="tooltip" title="L&ouml;schen"><i class="fas fa-times"></i></button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Keine Programme verf&uuml;gbar!</div>
    {% endif %}

    <div class="modal fade" id="notedirectory-editor-program-remove-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Program entfernen</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">Bist du dir sicher, dass du das ausgew&auml;hle Programm <strong class="entry-title"></strong> entfernen m&ouml;chtest?</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="notedirectory-editor-program-remove-confirm">Programm entfernen</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}