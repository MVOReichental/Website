{% extends "base/internal-public-switch.twig" %}

{% block title %}Programm {% if program.id and not createNewOnSave %}bearbeiten{% else %}erstellen{% endif %} - Notenverzeichniseditor{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="css/notedirectoryeditor.css"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="js/notedirectory-editor.js"></script>
{% endblock %}

{% block content %}
    <h1 class="page-header">
        Notenverzeichniseditor<br/>
        <span class="small">Programm {% if program.id and not createNewOnSave %}bearbeiten{% else %}erstellen{% endif %}</span>
    </h1>

    <form action="{{ path }}" method="post">
        <fieldset>
            <legend>Details</legend>

            <div class="form-group">
                <label for="program-editor-year">Jahr</label>
                <input type="number" class="form-control" id="program-editor-year" name="year" value="{{ program.year }}"/>
            </div>

            <div class="form-group">
                <label for="program-editor-title">Programm</label>
                <input type="text" class="form-control" id="program-editor-title" name="title" value="{{ program.title }}"/>
            </div>
        </fieldset>

        <fieldset>
            <legend>Titel</legend>

            <button type="button" class="btn btn-success" id="program-editor-add-title"><i class="fa fa-plus"></i> Titel hinzuf&uuml;gen</button>

            <table class="table table-striped table-hover table-responsive" id="notedirectory-editor-program-titles">
                <thead>
                    <tr>
                        <th>Nummer</th>
                        <th>Titel</th>
                        <th>Komponist</th>
                        <th>Bearbeiter</th>
                        <th>Verleger</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {% for title in program.titles %}
                        <tr>
                            <td class="entry-number"><input type="number" name="title_number[]" value="{{ title.number }}"/></td>
                            <td class="entry-id"><input type="hidden" name="title_id[]" value="{{ title.id }}"/>{{ title.title }}</td>
                            <td class="entry-composer">{{ title.composer }}</td>
                            <td class="entry-arranger">{{ title.arranger }}</td>
                            <td class="entry-publisher">{{ title.publisher }}</td>
                            <td>
                                <button type="button" class="btn btn-xs btn-danger remove" data-toggle="tooltip" title="L&ouml;schen"><i class="fa fa-remove"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </fieldset>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Speichern</button>
            <a href="internal/notedirectory/editor/programs" class="btn btn-secondary"><i class="fa fa-remove"></i> Abbrechen</a>
        </div>
    </form>

    <div class="modal fade" id="notedirectory-editor-program-add-title-modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Titel hinzuf&uuml;gen</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control search" placeholder="Suchen..."/>

                    <table class="table table-striped table-hover table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Titel</th>
                                <th>Komponist</th>
                                <th>Bearbeiter</th>
                                <th>Verleger</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for title in titles %}
                                <tr class="entry" data-id="{{ title.id }}">
                                    <td>
                                        <button type="button" class="btn btn-xs btn-success add" data-toggle="tooltip" title="Hinzuf&uuml;gen"><i class="fa fa-plus"></i></button>
                                    </td>
                                    <td class="entry-title">{{ title.title }}</td>
                                    <td class="entry-composer">{{ title.composer }}</td>
                                    <td class="entry-arranger">{{ title.arranger }}</td>
                                    <td class="entry-publisher">{{ title.publisher }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}