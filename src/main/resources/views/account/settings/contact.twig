{% extends "account/settings/page.twig" %}

{% block settingsHeader %}
    {% if update.contact %}
        {% if update.contact is constant("UPDATE_CONTACT_OK", this) %}
            <div class="alert alert-success"><i class="fa fa-check"></i> Deine Kontaktdaten wurden erfolgreich aktualisiert.</div>
        {% elseif update.contact is constant("UPDATE_CONTACT_INVALID_ID", this) %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-triangle"></i> Beim Aktualisieren der Kontaktdaten ist ein Fehler aufgetreten! Bitte versuche es erneut.</div>
        {% endif %}
    {% endif %}
{% endblock %}

{% block settingsContent %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Kontakt</h3>
        </div>

        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="form" value="contact"/>

                <table class="table">
                    {% for contact in user.contacts %}
                        <input type="hidden" name="id[]" value="{{ contact.id }}"/>

                        {{ include("account/settings/single-contact.twig") }}
                    {% endfor %}

                    {{ include("account/settings/single-contact.twig") }}
                </table>

                <button type="submit" class="btn btn-success">Speichern</button>
            </form>
        </div>
    </div>
{% endblock %}