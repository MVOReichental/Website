{% extends "account/settings/page.twig" %}

{% block settingsHeader %}
	{# TODO: Add success/error alert on save #}
{% endblock %}

{% block settingsContent %}
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Kontakt</h3>
		</div>

		<div class="panel-body">
			<form method="post">
				<input type="hidden" name="form" value="contact"/>

				{% for contact in user.contacts %}
					<div class="form-group">
						<select class="selectpicker show-tick" name="type[]" data-selection="{{ contact.type }}">
							<option value="fax">Fax</option>
							<option value="mobile">Mobil</option>
							<option value="phone">Telefon</option>
						</select>
						<select class="selectpicker show-tick" name="category[]" data-selection="{{ contact.category }}">
							<option value="private">Privat</option>
							<option value="business">Gesch&auml;ftlich</option>
						</select>

						<input type="text" class="form-control" name="value[]" value="{{ contact.value }}"/>

						<button class="input-group-addon btn btn-danger"><i class="fa fa-remove"></i></button>
					</div>
				{% endfor %}

				<button type="submit" class="btn btn-success">Speichern</button>
			</form>
		</div>
	</div>
{% endblock %}