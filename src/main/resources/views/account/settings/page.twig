<h1 class="page-header">Einstellungen</h1>

{% if message %}
	<div class="alert alert-{{ message.type }}"><i class="fa fa-{{ message.icon }}"></i> {{ message.text|raw }}</div>
{% endif %}

<div class="row">
	<div class="col-md-3">
		<div class="list-group">
			{% for page in pages %}
				{% if page.active %}
					<span class="list-group-item active">{{ page.title }}</span>
				{% else %}
					<a class="list-group-item" href="intern/settings/{{ page.name }}">{{ page.title }}</a>
				{% endif %}
			{% endfor %}
		</div>
	</div>

	<div class="col-md-9">
		{% include("account/settings/" ~ activePage.name ~ ".twig") %}
	</div>
</div>