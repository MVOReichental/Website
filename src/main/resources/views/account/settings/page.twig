{% extends "base/internal-public-switch.twig" %}

{% block title %}{{ activePage.title }} - Einstellungen{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset("css/account.css") }}"/>
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script src="{{ asset("js/jquery-qrcode.js") }}"></script>
    <script src="{{ asset("js/account.js") }}"></script>
{% endblock %}

{% block content %}
    <h1 class="page-header">Einstellungen</h1>

    {% block settingsHeader %}{% endblock %}

    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                {% for page in pages %}
                    {% if page.active %}
                        <span class="list-group-item active">{{ page.title }}</span>
                    {% else %}
                        <a class="list-group-item" href="internal/settings/{{ page.name }}">{{ page.title }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="col-md-9">
            {% block settingsContent %}{% endblock %}
        </div>
    </div>
{% endblock %}